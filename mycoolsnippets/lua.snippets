# Comments are possible
snippet fun
	function ${1:name}(${2:params})
		${0:$VISUAL}
	end
endsnippet

snippet upcase
	local ${1:var} = '${1/.*/\U\0/g}'
endsnippet

snippet choices
	print('My favorite language is: ${1|JavaScript,Lua,Rust|}')

endsnippet

snippet date
	Current date is `strftime('%c')`
endsnippet

# Custom tabstop order
snippet repeat
	repeat
		${2:what}
	while ${1:condition}
endsnippet
